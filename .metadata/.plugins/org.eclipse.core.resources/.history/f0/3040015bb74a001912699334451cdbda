package com.ta.sample.A2;

import java.io.PrintStream;

import org.junit.runner.Description;
import org.junit.runner.Result;
import org.junit.runner.notification.Failure;
import org.junit.runner.notification.RunListener;

public class JUnitExecutionListener extends RunListener {
	
    private final PrintStream writer;
        
    
    public JUnitExecutionListener(PrintStream out){
    	this.writer = out;
    }
    
    private void printColor(Object o, int code){
    	writer.print((char)27 + "["+code+"m"+o.toString()+"[0m");
    }
    public void testFailure(Failure failure) throws Exception {
        writer.println((char)27 +"[31mFailed: " + failure.getDescription().getClassName() + " " + failure.getDescription().getMethodName());
    }

}