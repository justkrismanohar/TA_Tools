package com.ta.core;

import org.junit.runner.JUnitCore;
import org.junit.runner.Result;

import com.ta.sample.A2.JUnitExecutionListener;

public abstract class TestCaseMarker extends Marker{

	
	protected abstract Class[] getTestCaseClasses();
	
	@Override
	public void mark() {
    	JUnitCore junit = new JUnitCore();
        //junit.addListener(new TextListener(System.out));
        junit.addListener(new JUnitExecutionListener(System.out));
        Result result = junit.run(getTestCaseClasses());
		
	}

}
